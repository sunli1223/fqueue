<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0http://maven.apache.org/xsd/assembly-1.0.0.xsd">
	<id>package</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<files>
		<file>
			<source>run.bat</source>
			<outputDirectory>/</outputDirectory>
			<destName>run.bat</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>run.sh</source>
			<outputDirectory>/</outputDirectory>
			<destName>run.sh</destName>
			<fileMode>0755</fileMode>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>src/main/logs</directory>
			<outputDirectory>logs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>config</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/db</directory>
			<outputDirectory>db</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>